{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
<div class="content-box">
    <div class="element-wrapper">
        <h6 class="element-header">
            Les utilisateurs
        </h6>
        <div class="element-box">
            <div class="table-responsive">
                <table id="dataTable1" width="100%" class="table table-striped table-lightfont">
                    <thead>
                    <tr>
                        <th></th>
                        <th>Photo</th>
                        <th>Nom et pr√©nom</th>
                        <th>Fonction</th>
                        <th>Login</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                    <tr>
                        <td>{{ loop.index0 + 1  }}</td>
                        <td class="cell-image-list">
                            {% if user.pictureName %}
                                <img class="custom-avatar custom-avatar-mini" src="{{ vich_uploader_asset(user, 'pictureFile') }}" alt="{{ user.login }}">
                            {% else %}
                                <img class="custom-avatar custom-avatar-mini" src="{{ asset('uploads/images/user.png') }}" alt="{{ user.login }}">
                            {% endif %}
                        </td>
                        <td>{{ user.fullName }}</td>
                        <td>{{ user.office }}</td>
                        <td>{{ user.login }}</td>
                        <td class="row-actions">
                            <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="os-icon os-icon-ui-49"></i></a>
                            <a class="danger" href="{{ path('user_delete', {'id':user.id}) }}" onclick="return confirm('Voulez vous vraiment supprimer {{ user.fullName }}')"><i class="os-icon os-icon-ui-15"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
