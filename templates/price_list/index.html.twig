{% extends 'base.html.twig' %}

{% block title %}Grille tarifaire{% endblock %}

{% block body %}
    <div class="content-box">

        <div class="element-wrapper">
            <div class="row">
                <div class="col-lg-10">
                    <h5 class="element-header">Grille Tarifaire</h5>
                </div>
                <div class="col-lg-2 text-right">
                    <a href="{{ path('price_list_add') }}" class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> Ajouter</a>
                </div>
            </div>
            <div class="element-box">
                <div class="table-responsive">
                    <table id="dataTable1" width="100%" class="table table-striped table-lightfont">
                        <thead>
                        <tr>
                            <th></th>
                            <th>Syntaxe</th>
                            <th>Description</th>
                            <th>Dernière mise à jour</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if prices is defined%}
                            {% for price in prices %}
                                <tr>
                                    <td>{{ loop.index0 + 1  }}</td>
                                    <td class="text-left"><h3>{{ syntax.title }}</h3></td>
                                    <td>{{ syntax.description }}</td>
                                    <td>{{ syntax.updateAt | date("F jS à g:ia") }}</td>
                                    <td class="row-actions">
                                        <a href="{{ path('syntax_edit', {'id': syntax.id}) }}"><i class="os-icon os-icon-ui-49"></i></a>
                                        <a class="danger" href="{{ path('syntax_delete', {'id':syntax.id}) }}" onclick="return confirm('Voulez vous vraiment supprimer la syntaxe{{ syntax.id }}')"><i class="os-icon os-icon-ui-15"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
