{% extends 'base.html.twig' %}

{% block title %}Grille tarifaire{% endblock %}

{% block body %}
    <div class="content-box">

        <div class="element-wrapper">
            <div class="row">
                <div class="col-lg-10">
                    <h5 class="element-header">Grille Tarifaire</h5>
                </div>
                <div class="col-lg-2 text-right">
                    <a href="{{ path('price_list_add') }}" class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> Ajouter</a>
                </div>
            </div>
            <div class="element-box">
                <div class="table-responsive">
                    <table id="dataTable1" width="100%" class="table table-striped table-lightfont">
                        <thead>
                        <tr>
                            <th></th>
                            <th>Plage</th>
                            <th>Tarif client</th>
                            <th>Commission PDV</th>
                            <th>Commission Dealer</th>
                            <th>Commission RÃ©seau</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if category is defined%}
                            {% for price in category.priceLists %}
                                <tr>
                                    <td>{{ loop.index0 + 1  }}</td>
                                    <td class="text-left">Entre {{ price.minRange }} et  {{ price.maxRange }}</td>
                                    <td class="text-left">Entre {{ price.minPrice }} et  {{ price.maxPrice }}</td>
                                    <td class="text-left">{{ price.posCommission }}</td>
                                    <td class="text-left">{{ price.dealerCommission }}</td>
                                    <td class="text-left">{{ price.commission }}</td>
                                    <td class="row-actions">
                                        <a href="{{ path('price_list_edit', {'id': price.id}) }}"><i class="os-icon os-icon-ui-49"></i></a>
                                        <a class="danger" href="{{ path('price_list_delete', {'id':price.id}) }}" onclick="return confirm('Voulez vous vraiment supprimer le prix id : {{ price.id }}')"><i class="os-icon os-icon-ui-15"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
