{% extends 'base.html.twig' %}
{% block title %}

{% endblock %}
{% block body %}
    <div class="content-box">
        <div class="row">
            <div class="col-sm-12">
                <div class="element-wrapper">
                    <h6 class="element-header">
                        Tableau des transactions ill√©gales
                    </h6>
                </div>
            </div>
        </div>
        <div class="element-box">
            <div class="table-responsive">
                <table id="dataTable1" width="100%" class="table table-striped table-lightfont">
                    <thead>
                    <tr>
                        <th></th>
                        <th>id</th>
                        <th>Date</th>
                        <th>Nom Point</th>
                        <th>Profil</th>
                        <th>Montant</th>
                        <th>Commission Dealer</th>
                        <th>Commission Dealer Calculer</th>
                        <th>Commission PDV</th>
                        <th>Commission PDV calculer</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if sales  %}
                        {% for sale in sales %}
                            <tr>
                                <td class="text-center">{{ loop.index0+1 }}</td>
                                <th>{{ sale.id  }}</th>
                                <th>{{ sale.transactionAt | date  }}</th>
                                <td>{{ sale.msisdn.pointofsale.name }}</td>
                                <td>{{ sale.msisdn.profile.title }}</td>
                                <td>{{ sale.amount | number_format(0, ',', ' ')  }} F CFA</td>
                                <td>{{ sale.dComm | number_format(0, ',', ' ')  }} F CFA</td>
                                <td>{{ sale.dCommCalc  | number_format(0, ',', ' ')  }} F CFA</td>
                                <td>{{ sale.posComm | number_format(0, ',', ' ')  }} F CFA</td>
                                <td>{{ sale.posCommCalc | number_format(0, ',', ' ')  }} F CFA</td>
                                <td class="row-actions">
                                    <a href="{{ path('pointofsale_show', {'id': sale.msisdn.pointofsale.id}) }}"><i class="fa fa-eye"></i></a>
                                </td>
                            </tr>

                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}



