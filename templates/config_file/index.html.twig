{% extends 'base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block body %}
    <div class="content-box">
        <div class="os-tabs-w mx-4">
            <div class="os-tabs-controls">
                <ul class="nav nav-tabs upper" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Transactions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#config" role="tab" aria-controls="config" aria-selected="false">Configuration</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <div class="element-wrapper">
                    <div class="row">
                        <div class="col-lg-10">
                            <h5 class="element-header">Liste des Fichiers de transactions (Reporting de 6h)</h5>
                        </div>
                        <div class="col-lg-2 text-right">
                            {% if 'ROLE_SUPER_ADMIN' in app.user.roles() %}
                                <a href="{{ path('file_add') }}" class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> Ajouter</a>
                            {% endif %}
                        </div>
                    </div>
                    <div class="element-box">
                        <div class="table-responsive">
                            <table id="dataTable1" width="100%" class="table table-striped table-lightfont">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th>Date</th>
                                    <th>Configuration</th>
                                    <th>Fichier</th>
                                    <th></th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if files %}
                                    {% for file in files %}
                                        <tr>
                                            <td>{{ loop.index0 + 1  }}</td>
                                            <td>{% if file.config %}{{ file.config.configAt | date("F jS à g:ia") }}{% endif %}</td>
                                            <td>{% if file.config %}{{ file.config.content }}{% endif %}</td>
                                            <th><a href="{{ vich_uploader_asset(file) }}">{{ file.fileName }}</a></th>
                                            <td class="row-actions">
                                                <a href="{{ path('uploader_transaction', {'id' : file.id}) }}" class="btn btn-rounded btn-sm btn-outline-primary  {% if file.isUpload %} disabled {% endif %}" data-toggle="tooltip" title="" data-original-title="Sauvegarder les transactions"><i class="fa fa-upload"></i></a>
                                                <a href="{{ path('uploader_balance', {'id' : file.id}) }}" class="btn btn-rounded btn-sm btn-outline-primary  {% if file.isLoad %} disabled {% endif %}" data-toggle="tooltip" title="" data-original-title="Sauvegarder les solde"><i class="fa fa-balance-scale"></i></a>
                                            </td>
                                            <td class="row-actions">
                                                <a href="{{ path('file_edit', {'id' : file.config.id}) }}"><i class="os-icon os-icon-ui-49"></i></a>
                                                <a href="{{ path('file_edit', {'id': file.id}) }}"><i class="fa fa-eye"></i></a>
                                                <a class="danger" href="{{ path('configFile_delete', {'id': file.id}) }}" onclick="return confirm('Voulez vous vraiment supprimer la zone{{ file.fileName }}')"><i class="os-icon os-icon-ui-15"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <div class="tab-pane fade" id="config" role="tabpanel" aria-labelledby="config-tab">
                <div class="element-wrapper">
                    <h6 class="element-header">
                        Configuration et mises à jour de l'univers
                    </h6>
                    <div class="projects-list">
                        <div class="project-box">
                            <div class="project-head">
                                <div class="project-title">
                                    <h5>
                                        Fichiers de configuration
                                    </h5>
                                </div>
                            </div>
                            <div class="project-info">
                                <div class="table-responsive">
                                    <table id="dataTable2" width="100%" class="table table-striped table-lightfont">
                                        <thead>
                                        <tr>
                                            <th>Désignation</th>
                                            <th>slug</th>
                                            <th>Mise à jour</th>
                                            <th>Auteur</th>
                                            <th>Action</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% if configs %}
                                            {% for file in configs %}
                                                <tr>
                                                    <td>{{ file.createdAt | date("j F à h:i")  }}</td>
                                                    <td>{{ file.fileName | upper }}</td>
                                                    <td>{{ file.updateAt | date("j F à h:i") }}</td>
                                                    <td>{% if file.config %}{{ file.config.author.login }}{% else %}Non identifié{% endif %}</td>
                                                    <td class="row-actions">
                                                        {% if file.category.slug == 'pos' %}
                                                        <a href="{{ path('uploader_universe', {'id' : file.id}) }}" class="btn btn-rounded btn-sm btn-outline-primary {% if file.isUpload %} disabled {% endif %}" data-toggle="tooltip" title="" data-original-title="Mettre à jour l'univers"><i class="fa fa-play"></i></a>
                                                        {% elseif file.category.slug == 'cagnt' %}
                                                            <a href="{{ path('uploader_trader', {'id' : file.id}) }}" class="btn btn-rounded btn-sm btn-outline-primary {% if file.isUpload %} disabled {% endif %}" data-toggle="tooltip" title="" data-original-title="Mettre à jour la liste des commerciaux (CAGNT)"><i class="fa fa-play"></i></a>
                                                        {% elseif file.category.slug == 'poscagnt' %}
                                                            <a href="{{ path('uploader_poscagnt', {'id' : file.id}) }}" class="btn btn-rounded btn-sm btn-outline-primary {% if file.isUpload %} disabled {% endif %}" data-toggle="tooltip" title="" data-original-title="Mettre à jour les POSCAGNT"><i class="fa fa-play"></i></a>
                                                        {% endif %}
                                                        <a href="{{ path('file_edit', {'id' : file.config.id}) }}"><i class="os-icon os-icon-ui-49"></i></a>
                                                        <a class="danger" href="{{ path('configFile_delete', {'id' : file.id}) }}" onclick="return confirm('Voulez vous vraiment supprimer la catégorie  {{ file.fileName }}"><i class="os-icon os-icon-ui-15"></i></a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        {% endif %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>
{% endblock %}
