{% extends 'base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block body %}
    <div class="content-box">
        <div class="element-wrapper">
            <div class="row">
                <div class="col-lg-10">
                    <h5 class="element-header">Liste des Fichiers de transactions (Reporting de 6h)</h5>
                </div>
                <div class="col-lg-2 text-right">
                    {% if 'ROLE_SUPER_ADMIN' in app.user.roles() %}
                        <a href="{{ path('file_add') }}" class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> Ajouter</a>
                    {% endif %}
                </div>
            </div>
            <div class="element-box">
                <div class="table-responsive">
                    <table id="dataTable1" width="100%" class="table table-striped table-lightfont">
                        <thead>
                        <tr>
                            <th></th>
                            <th>Date</th>
                            <th>Configuration</th>
                            <th>Fichier</th>
                            <th>Dernière mise à jour</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if files %}
                            {% for file in files %}
                                <tr>
                                    <td>{{ loop.index0 + 1  }}</td>
                                    <td>{% if file.config %}{{ file.config.configAt | date("F jS à g:ia") }}{% endif %}</td>
                                    <td>{% if file.config %}{{ file.config.content }}{% endif %}</td>
                                    <th><a href="{{ vich_uploader_asset(file) }}">{{ file.fileName }}</a></th>
                                    <td>{{ file.updateAt | date("F jS à g:ia") }}</td>
                                    <td class="row-actions">
                                        <a href=""><i class="os-icon os-icon-ui-49"></i></a>
                                        <a href="{{ path('file_edit', {'id': file.id}) }}"><i class="fa fa-eye"></i></a>
                                        <a class="danger" href="{{ path('configFile_delete', {'id': file.id}) }}" onclick="return confirm('Voulez vous vraiment supprimer la zone{{ file.fileName }}')"><i class="os-icon os-icon-ui-15"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
