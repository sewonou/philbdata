{% extends 'base.html.twig' %}
{% block title %}Changer de mot de passe{% endblock %}
{% block body %}
<div class="content-box"><div class="row">
        <div class="col-sm-12">
            <div class="element-wrapper">
                <div class="element-box">
                    {{ form_start(form) }}
                    <h5 class="form-header">
                        Changer votre mot de passe
                    </h5>
                    {{ form_row(form.oldPassword) }}
                    <div class="row">
                        <div class="col-lg-6">{{ form_row(form.newPassword) }}</div>
                        <div class="col-lg-6">{{ form_row(form.confirmPassword) }}</div>
                    </div>


                    <div class="form-buttons-w float-right">
                        <button class="btn btn-primary" type="submit"> Valider</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}



