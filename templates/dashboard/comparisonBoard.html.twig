{% extends 'base.html.twig' %}
{% block title %}
Tableau de comparaison
{% endblock %}
{% block body %}
    <div class="content-box">
        <div class="row">
            <div class="col-sm-12">
                <div class="element-wrapper">
                    <div class="element-actions">
                        {{ include('partials/_searchForm.html.twig') }}
                    </div>
                    <h6 class="element-header">
                        Tableau de perfomances des par Region
                    </h6>
                </div>
            </div>
        </div>
        <div class="element-box">
            <div class="table-responsive">
                <table id="dataTable1" width="100%" class="table table-striped table-lightfont">
                    <thead>
                    <tr>
                        <th></th>
                        <th>Date</th>
                        <th>Commission Dealer</th>
                        <th>Commission Dealer Calculer</th>
                        <th>Différence</th>
                        <th>Commission PDV</th>
                        <th>Commission PDV calculer</th>
                        <th>Différence</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if sales  %}
                        {% for sale in sales %}
                            <tr>
                                <td class="text-center">{{ loop.index0+1 }}</td>
                                <th>{{ sale.day  }}</th>
                                <td>{{ sale.dComm | number_format(0, ',', ' ')  }} F CFA</td>
                                <td>{{ sale.dCommCalc | number_format(0, ',', ' ')  }} F CFA</td>
                                <td>{{ (sale.dCommCalc - sale.dComm)  | number_format(0, ',', ' ')  }} F CFA</td>
                                <td>{{ sale.posComm | number_format(0, ',', ' ')  }} F CFA</td>
                                <td>{{ sale.posCommCalc | number_format(0, ',', ' ')  }} F CFA</td>
                                <td>{{ (sale.posCommCalc - sale.posComm) | number_format(0, ',', ' ')  }} F CFA</td>
                                <td class="row-actions">
                                    <a href="{{ path('sale_illegal', {'date': sale.day}) }}"><i class="fa fa-eye"></i></a>
                                </td>
                            </tr>

                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}



