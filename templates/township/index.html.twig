{% extends 'base.html.twig' %}

{% block title %}Zoning{% endblock %}

{% block body %}
    <div class="content-box">
        <div class="element-wrapper">
            <div class="row">
                <div class="col-lg-10">
                    <h5 class="element-header">Liste des cantons</h5>
                </div>
                <div class="col-lg-2 text-right">
                    <a href="{{ path('township_add') }}" class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> Ajouter</a>
                </div>
            </div>
            {{ include('partials/_simCardStat.html.twig') }}
            <div class="element-box">
                <div class="table-responsive">
                    <table id="dataTable1" width="100%" class="table table-striped table-lightfont">
                        <thead>
                        <tr>
                            <th></th>
                            <th>Commune</th>
                            <th>Préfecture</th>
                            <th>Canton</th>
                            <th>PDV Agnt</th>
                            <th>PDV Distro</th>
                            <th>Total PDV</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if townships %}
                            {% for township in townships %}
                                <tr>
                                    <td>{{ loop.index0 + 1  }}</td>
                                    <td>{% if township.prefecture %}{{ township.prefecture.town.name }}{% else %}Commune inexistante{% endif %}</td>
                                    <td>{% if township.prefecture %}{{ township.prefecture.name }}{% else %}Préfecture inexistante{% endif %}</td>
                                    <td>{{ township.name }}</td>
                                    <td>{{ zoningStat.pointofsaleInTownship(township.id, 'AGNT') }}</td>
                                    <td>{{ zoningStat.pointofsaleInTownship(township.id, 'DISTRO') }}</td>
                                    <td>{{ zoningStat.pointofsaleInTownship(township.id, 'AGNT') + zoningStat.pointofsaleInTownship(township.id, 'DISTRO') }}</td>
                                    <td class="row-actions">
                                        <a href="{{ path('township_edit', {'id': township.id}) }}"><i class="os-icon os-icon-ui-49"></i></a>
                                        <a href="{{ path('township_show', {'id': township.id}) }}"><i class="fa fa-eye"></i></a>
                                        <a class="danger" href="{{ path('township_delete', {'id':township.id}) }}" onclick="return confirm('Voulez vous vraiment supprimer le canton{{ township.name }}')"><i class="os-icon os-icon-ui-15"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}